extends ../layout

block content
  .row 
    .col-6 
      h1= title

      form(action=`/quotes/${quote.id}?_method=PUT`, method="post") 
        include ./form

        .form-group 
          .row.align-items-center 
            .col-6 
              button(type="submit") Update #{singular(downcase(labels.module.quote))}
            .col-6.text-end
              a(href="/quotes").btn.is-muted Cancel
        