        label(for="total") #{labels.quote.total}
        input(type="text", name="total", id="total", value=quote ? quote.total : 0, placeholder="1200")

//- description
if labels.quote.description
    .form-group 
        label(for="description") #{labels.quote.description}
        textarea(name="description", id="description", cols="30", rows="10", placeholder="Add informative optional description") #{quote ? quote.description : ""}

