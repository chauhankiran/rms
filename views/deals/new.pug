extends ../layout

block content
  .row 
    .col-6 
      h1= title

      include ../partials/flash

      form(action="/deals", method="post") 
        input(type="hidden", name="companyId" value=companyId)
        input(type="hidden", name="contactId" value=contactId)
        
        include ./form
        
        .form-group 
          .row.align-items-center 
            .col-6 
              button(type="submit") Create #{singular(downcase(labels.module.deal))}
            .col-6.text-end
              a(href="/deals").btn.is-muted Cancel