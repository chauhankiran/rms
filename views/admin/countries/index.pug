extends ../../layout
include ../../mixins/pagination

block content
    .row.align-items-center 
        .col-8 
            h1 #{title} (#{count})
        .col-4.text-end 
            a(href="/admin/countries/new").btn New country

        .col-12
            form(action="/admin/countries", method="get") 
                .form-group 
                    input(type="hidden", name="orderBy", value=orderBy)
                    input(type="hidden", name="orderDir", value=orderDir)
                    input(type="text", name="search", value=search, autofocus=true, placeholder="Type name and press Enter")

        .col-12
            include ../../partials/flash

        .col-12
            table
                thead 
                    tr
                        th
                            if orderDir === 'ASC'
                                a(href=`/admin/countries?orderBy=id&orderDir=DESC${search ? `&search=${search}` : ''}`) Id
                            else 
                                a(href=`/admin/countries?orderBy=id&orderDir=ASC${search ? `&search=${search}` : ''}`) Id
              
                            if orderBy === 'id'
                                span.order-wrapper= orderDir

                        th
                            if orderDir === 'ASC'
                                a(href=`/admin/countries?orderBy=name&orderDir=DESC${search ? `&search=${search}` : ''}`) Name
                            else 
                                a(href=`/admin/countries?orderBy=name&orderDir=ASC${search ? `&search=${search}` : ''}`) Name
              
                            if orderBy === 'name'
                                span.order-wrapper= orderDir

                        th Created by
                        th Updated by

                        th
                            if orderDir === 'ASC'
                                a(href=`/admin/countries?orderBy=createdAt&orderDir=DESC${search ? `&search=${search}` : ''}`) Created at
                            else 
                                a(href=`/admin/countries?orderBy=createdAt&orderDir=ASC${search ? `&search=${search}` : ''}`) Created at
              
                            if orderBy === 'createdAt'
                                span.order-wrapper= orderDir

                        th
                            if orderDir === 'ASC'
                                a(href=`/admin/countries?orderBy=updatedAt&orderDir=DESC${search ? `&search=${search}` : ''}`) Updated at
                            else 
                                a(href=`/admin/countries?orderBy=updatedAt&orderDir=ASC${search ? `&search=${search}` : ''}`) Updated at
              
                            if orderBy === 'updatedAt'
                                span.order-wrapper= orderDir
            
                tbody 
                    if countries.length > 0
                        each country in countries
                            tr
                                td
                                    a(href=`/admin/countries/${country.id}`) #{country.id}
                                td #{country.name}
                                    if (!country.isActive)
                                        span.archive-status (archived)
                                td #{country.createdByEmail || "-"}
                                td #{country.updatedByEmail || "-"}
                                td #{country.createdAt || "-" }
                                td #{country.updatedAt || "-" } 
                    else 
                        tr 
                            td(colspan=6).text-center No countries found.

        .col-12 
            +pagination(paginationLinks.first, paginationLinks.prev, paginationLinks.next, paginationLinks.last)