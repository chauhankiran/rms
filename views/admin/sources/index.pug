extends ../../layout
include ../../mixins/pagination

block content
    .row.align-items-center 
        .col-8 
            h1 #{title} (#{count})
        .col-4.text-end 
            a(href="/admin/sources/new").btn New source

        .col-12
            form(action="/admin/sources", method="get") 
                .form-group 
                    input(type="hidden", name="orderBy", value=orderBy)
                    input(type="hidden", name="orderDir", value=orderDir)
                    input(type="text", name="search", value=search, autofocus=true, placeholder="Type name and press Enter")

        .col-12
            include ../../partials/flash

        .col-12
            table
                thead 
                    tr
                        th
                            if orderDir === 'ASC'
                                a(href=`/admin/sources?orderBy=id&orderDir=DESC${search ? `&search=${search}` : ''}`) Id
                            else 
                                a(href=`/admin/sources?orderBy=id&orderDir=ASC${search ? `&search=${search}` : ''}`) Id
              
                            if orderBy === 'id'
                                span.order-wrapper= orderDir

                        th
                            if orderDir === 'ASC'
                                a(href=`/admin/sources?orderBy=name&orderDir=DESC${search ? `&search=${search}` : ''}`) Name
                            else 
                                a(href=`/admin/sources?orderBy=name&orderDir=ASC${search ? `&search=${search}` : ''}`) Name
              
                            if orderBy === 'name'
                                span.order-wrapper= orderDir

                        th Created by
                        th Updated by

                        th
                            if orderDir === 'ASC'
                                a(href=`/admin/sources?orderBy=createdAt&orderDir=DESC${search ? `&search=${search}` : ''}`) Created at
                            else 
                                a(href=`/admin/sources?orderBy=createdAt&orderDir=ASC${search ? `&search=${search}` : ''}`) Created at
              
                            if orderBy === 'createdAt'
                                span.order-wrapper= orderDir

                        th
                            if orderDir === 'ASC'
                                a(href=`/admin/sources?orderBy=updatedAt&orderDir=DESC${search ? `&search=${search}` : ''}`) Updated at
                            else 
                                a(href=`/admin/sources?orderBy=updatedAt&orderDir=ASC${search ? `&search=${search}` : ''}`) Updated at
              
                            if orderBy === 'updatedAt'
                                span.order-wrapper= orderDir
            
                tbody 
                    if sources.length > 0
                        each source in sources 
                            tr
                                td
                                    a(href=`/admin/sources/${source.id}`) #{source.id}
                                td
                                    a(href=`/admin/sources/${source.id}`) #{source.name}
                                    if (!source.isActive)
                                        span.archive-status (archived)
                                td #{source.createdByEmail || "-"}
                                td #{source.updatedByEmail || "-"}
                                td #{source.createdAt || "-" }
                                td #{source.updatedAt || "-" } 
                    else 
                        tr 
                            td(colspan=6).text-center No sources found.

        .col-12 
            +pagination(paginationLinks.first, paginationLinks.prev, paginationLinks.next, paginationLinks.last)