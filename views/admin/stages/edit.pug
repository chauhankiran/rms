extends ../../layout

block content
    .row 
        .col-6 
            h1= title

            include ../../partials/flash

            form(action=`/admin/stages/${stage.id}?_method=PUT`, method="post") 
                include ./form

                .form-group 
                    .row.align-items-center 
                        .col-6 
                            button(type="submit") Update stage
                        .col-6.text-end
                            a(href=`/admin/stages/${stage.id}`).btn.is-muted Cancel
