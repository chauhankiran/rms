        input(type="text", name="isCompleted", id="isCompleted", value=task ? task.isCompleted : "", placeholder="", autofocus=true)

//- description
if labels.task.description
    .form-group 
        label(for="description")= labels.task.description
        textarea(name="description", id="description" cols="30", rows="10", placeholder="") #{task ? task.description : ""}