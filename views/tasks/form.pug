//- name
if labels.task.name
    .form-group 
        label(for="name")= labels.task.name
        input(type="text", name="name", id="name", value=task ? task.name : "", placeholder="", autofocus=true)

//- typeId
if labels.task.typeId 
    .form-group 
        label(for="typeId")= labels.task.typeId
        select(name="typeId", id="typeId")
            for type in types
                option(value=type.id, selected=task && type.id == task.typeId) #{type.name}

//- phone
if labels.task.phone 
    .form-group 
        label(for="phone")= labels.task.phone
        input(type="text", name="phone", id="phone", value=task ? task.phone : "", placeholder="", autofocus=true)

