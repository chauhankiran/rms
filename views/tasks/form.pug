    .form-group 
        label(for="location")= labels.task.location
        input(type="text", name="location", id="location", value=task ? task.location : "", placeholder="", autofocus=true)

//- when
if labels.task.when 
    .form-group 
        label(for="when")= labels.task.when
        input(type="date", name="when", id="when", value=task ? new Date(task.when) : "", placeholder="", autofocus=true)

