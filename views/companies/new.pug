extends ../layout

block content
    .row 
        .col-12 
            h1= title

        .col-12
            include ../partials/flash

        .col-6
            form(action="/companies", method="post") 
                include ./form
        
                .form-group 
                    .row.align-items-center 
                        .col-6 
                            button(type="submit") Create #{singular(downcase(labels.module.company))}
                        .col-6.text-end
                            a(href="/companies").btn.is-muted Cancel
